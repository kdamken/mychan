<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include('./partials/nav'); %>
    <div class="main-content">
      <h1><%= title %></h1>
      <p>Welcome to <%= title %></p>
      <% if (user) {%>
        <h1>WELCOME BACK <%= user.username %></h1>
      <% } else { %>
        <h1>please <a href="/log-in">log in</a> or <a href="/sign-up">Sign Up</a></h1>
        <%- include('./partials/log-in-form', {errors: errors}); %>
      <%}%>
      <%- include('./partials/messages'); %>
    </div>
  </body>
</html>